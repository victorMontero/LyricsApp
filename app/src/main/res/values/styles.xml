<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/secondaryColor</item>
        <item name="colorAccent">@color/detailsDarkColor</item>

<!--        removing actionbar-->
        <item name= "windowActionBar">false</item>
        <item name= "windowNoTitle">true</item>
    </style>
    
    <style name="ToolBarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">

        <item name="android:textColor">@color/detailsLightColor</item>
        <item name="android:textColorSecondary">@color/detailsDarkColor</item>
    </style>

</resources>